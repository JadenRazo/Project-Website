# =============================================================================
# Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.development for development or .env.production for production
# =============================================================================

# Development Server Configuration
PORT=3000
HOST=0.0.0.0
BROWSER=none

# Development Features
FAST_REFRESH=true
REACT_APP_DEV_MODE=true
GENERATE_SOURCEMAP=true
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# Security (Development Only)
DANGEROUSLY_DISABLE_HOST_CHECK=false

# API Endpoints (Development)
# NOTE: Use 127.0.0.1 instead of localhost for better compatibility
REACT_APP_API_URL=http://127.0.0.1:8080
REACT_APP_WS_URL=ws://127.0.0.1:8082
REACT_APP_DEVPANEL_URL=http://127.0.0.1:8081
REACT_APP_URLSHORTENER_URL=http://127.0.0.1:8083

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# UI Configuration
REACT_APP_THEME=auto
REACT_APP_ANIMATION_REDUCED=false

# Performance Settings
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_ENABLE_SERVICE_WORKER=false

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Build Configuration
FORCE_COLOR=true
CI=false

# =============================================================================
# Production Example (for .env.production)
# =============================================================================
# PORT=3000
# REACT_APP_API_URL=https://your-domain.com
# REACT_APP_WS_URL=wss://your-domain.com
# REACT_APP_DEVPANEL_URL=https://your-domain.com/devpanel
# REACT_APP_URLSHORTENER_URL=https://your-domain.com/short
# REACT_APP_ENABLE_DEBUG=false
# REACT_APP_ENABLE_SERVICE_WORKER=true
# GENERATE_SOURCEMAP=false
# DANGEROUSLY_DISABLE_HOST_CHECK=false