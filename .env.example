# =============================================================================
# Portfolio Website Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_website
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# OAuth2 Two-Factor Authentication
# Allowed admin emails (comma-separated, supports domain wildcards like @jadenrazo.dev)
ADMIN_ALLOWED_EMAILS=example@gmail.com
# 32-byte hex encryption key for OAuth tokens (generate with: openssl rand -hex 32)
OAUTH_ENCRYPTION_KEY=

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/google

# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/github

# Microsoft OAuth2
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/microsoft

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_HOST=localhost
API_PORT=8080

# Development Settings
NODE_ENV=development
GO_ENV=development

# Frontend URLs
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8082
REACT_APP_DEVPANEL_URL=http://localhost:8081
REACT_APP_URLSHORTENER_URL=http://localhost:8083

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yoursite.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_TIMEOUT=24h
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# External Services (Optional)
GITHUB_TOKEN=
ANALYTICS_ID=