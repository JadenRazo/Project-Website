# =============================================================================
# Portfolio Website Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_website
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# TOTP MFA Configuration
TOTP_ISSUER=Portfolio-DevPanel
MFA_RATE_LIMIT_WINDOW=15m
MFA_RATE_LIMIT_MAX=5

# OAuth2 Authentication Configuration
# Frontend URL (where OAuth callbacks redirect users)
FRONTEND_URL=http://localhost:3000

# Allowed admin emails (comma-separated, supports domain wildcards like @jadenrazo.dev)
ADMIN_ALLOWED_EMAILS=example@gmail.com,@jadenrazo.dev

# 32-byte hex encryption key for OAuth tokens (generate with: openssl rand -hex 32)
OAUTH_ENCRYPTION_KEY=

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/oauth/callback/google

# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/oauth/callback/github

# Microsoft OAuth2
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/oauth/callback/microsoft

# Discord Linked Roles (Public Connection Feature)
# Create app at: https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_APPLICATION_ID=
DISCORD_REDIRECT_URL=http://localhost:8080/api/v1/discord/callback
# Bot token needed for metadata registration script
DISCORD_BOT_TOKEN=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# Redis ACL User Passwords (generate with: openssl rand -base64 32)
REDIS_APP_PASSWORD=your_redis_app_password_here
REDIS_MONITOR_PASSWORD=your_redis_monitor_password_here
REDIS_WORKER_PASSWORD=your_redis_worker_password_here
REDIS_HEALTH_PASSWORD=your_redis_health_password_here
# Redis TLS Configuration
REDIS_TLS_ENABLED=true
REDIS_TLS_CA_CERT=/path/to/ca.crt

# API Configuration
API_HOST=localhost
API_PORT=8080

# Development Settings
NODE_ENV=development
GO_ENV=development

# Frontend URLs
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8082
REACT_APP_DEVPANEL_URL=http://localhost:8081
REACT_APP_URLSHORTENER_URL=http://localhost:8083

# Contact Form / SMTP Configuration
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=587
SMTP_USER=jadenrazo@yahoo.com
SMTP_PASS=your_yahoo_app_password_here
FROM_EMAIL=jadenrazo@yahoo.com
CONTACT_TO_EMAIL=jadenrazo@yahoo.com

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_TIMEOUT=24h
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# External Services (Optional)
GITHUB_TOKEN=
ANALYTICS_ID=

# =============================================================================
# Docker-Specific Configuration
# =============================================================================

# Admin Token (generate with: openssl rand -base64 32)
ADMIN_TOKEN=your_admin_token_here

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here

# Metrics and Monitoring
METRICS_ENABLED=true
VISITOR_TRACKING_ENABLED=true
PRIVACY_MODE=balanced

# Service Ports (for reference)
# API: 8080
# DevPanel: 8081
# Messaging: 8082
# URL Shortener: 8083
# Worker: 8084
# Frontend: 3000
# Prometheus: 9090
# Grafana: 3001

# Docker Network Configuration
ENVIRONMENT=production