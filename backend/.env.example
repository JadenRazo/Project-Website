# Application Environment
APP_ENV=development
APP_NAME=project-website
APP_VERSION=1.0.0

# Server Configuration
PORT=8080
ADMIN_TOKEN=your-secure-admin-token-here

# Database Configuration
DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_website
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_SSL_MODE=disable

# Alternative: Use DATABASE_URL for single connection string
# DATABASE_URL=postgres://user:password@localhost:5432/dbname?sslmode=disable

# Service Ports
API_PORT=8080
DEVPANEL_PORT=8081
MESSAGING_PORT=8082
URLSHORTENER_PORT=8083

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h

# OAuth2 Two-Factor Authentication
# Allowed admin emails (comma-separated, supports domain wildcards like @jadenrazo.dev)
ADMIN_ALLOWED_EMAILS=jadenscottrazo@gmail.com,admin@jadenrazo.dev,dev@jadenrazo.dev
# 32-byte hex encryption key for OAuth tokens (generate with: openssl rand -hex 32)
OAUTH_ENCRYPTION_KEY=

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/google

# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/github

# Microsoft OAuth2
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URL=http://localhost:8080/api/v1/auth/admin/2fa/callback/microsoft

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# URL Shortener
URLSHORTENER_BASE_URL=http://localhost:8080

# Messaging
MAX_MESSAGE_SIZE=65536
MAX_ATTACHMENTS=10

# Worker Configuration
WORKER_POLL_INTERVAL=5s
WORKER_MAX_RETRIES=3

# Monitoring
ENABLE_METRICS=true
ENABLE_PPROF=false
HEALTH_CHECK_INTERVAL=30s

# Code Stats
CODE_STATS_UPDATE_INTERVAL=1h
PROJECT_DIR=/main/Project-Website